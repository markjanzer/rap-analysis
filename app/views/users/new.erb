<div class="row">
  <div class="large-5 large-centered columns">
    <div class="input-box">
      <div class="small-12 columns">
        <h3 class="text-centered">Create Account</h3>
      </div>
      <div class="row">
        <div class="large-12 columns">
          <%= form_tag( @user, {"data-abide": "", "novalidate": "" }) do %>
            <div class="small-12 columns">
              <label>Username
                <input name="username" type="text" aria-describedby="exampleHelpText" required pattern:"">
                <span class="form-error">
                  A Username is required!
                </span>
              </label>
            </div>

            <div class="small-12 columns">
              <label>Password Required
                <input name="password" type="password" id="password" aria-describedby="exampleHelpText" required pattern:"alpha_numeric">
                <span class="form-error">
                  I'm required!
                </span>
              </label>
            </div>

            <div class="small-12 columns">
              <label>Re-enter Password
                <input name="password-confirmation" type="password" aria-describedby="exampleHelpText2" required pattern="alpha_numeric" data-equalto="password">
                <span class="form-error">
                  Passwords did not match!
                </span>
              </label>
            </div>

            <!-- refactor add password confirmation -->
            <div class="small-12 columns">
              <button class="button" type="submit" value="Create Account">Create Account</button>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
