<div class="container">
  <div class="song-header">
    <h1><%= @song.name %></h1>
    <h2><%= @artists.first.name %></h2>
    <h2><%= @album.title %></h2>
  </div>

  <div class="display-song">
    <%= erb :'/partials/display-song', locals: { song: @song }, layout: false %>
  </div>
  <% puts @song.transcriber %>
  <% puts current_user %>
  <% if current_user %>
    <% if @song.transcriber.username == current_user.username %>
      <a href="/songs/<%= @song.id %>/edit"><button>Edit Song</button></a>
    <% end %>
  <% end %>
</div>
