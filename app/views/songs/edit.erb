<div class="container">
  <div class="song-header">
    <h1>Song: <%= @song.name %></h1>
    <h2>Artist: <%= @artists.first.name %></h2>
    <h2>Album: <%= @album.title %></h2>
  </div>

  <button type="button" class="begin-section-creation">Add Section</button>

  <div class="section-creation-div">
    <form action="/sections" method="POST" class="create-section">
      <input type="hidden" name="song-id" value="<%= @song.id %>">
      <select name="section-type">
        <option value="verse">verse</option>
        <option value="chorus">chorus</option>
        <option value="bridge">bridge</option>
        <option value="other">other</option>
      </select>
      <select name="section-artist-id">
        <option value="<%= @artists.first.id %>"><%= @artists.first.name %></option>
      </select>
      <input type="submit">
    </form>
  </div>

  <button type="button" class="begin-measure-creation">Add Measure</button>

  <div class="rhythm-creation-div">
    <%= erb :'/partials/duration-buttons' %>
    <p>Current measure:</p>
    <p class='measure-creation-values'></p>
    <p>Current value: </p>
    <p class='measure-creation-total'>0</p>
    <button type="button" class="retry-rhythm-creation">Retry</button>
    <button type="button" class="create-rhythm">Create Rhythm</button>
  </div>

  <div class="input-text-div">
  </div>

  <div class="input-qualities-div">
  </div>

  <br>

  <div class="display-song">
    <%= erb :'/partials/display-song', locals: { song: @song }, layout: false %>
  </div>

  <br>

  <a href="/songs/<%= @song.id %>">Complete Song</a>

  <br>

  <button style="background-color: red;" class="delete-song" name="delete" value="<%= @song.id %>">Delete Song</button>

</div>

