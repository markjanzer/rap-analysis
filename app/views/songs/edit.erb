<div>
  <h1>Edit Song</h1>
  <% if !current_user %>
    <p>NONE OF YOUR INFORMATION WILL BE SAVED UNLESS YOU LOG IN</p>
  <% end %>
  <input type="hidden" name="song-id" value="<%= @song.id %>">
  <div class="song-header">
    <h2><%= @song.name %></h2>
    <p><%= @artist_names %></p>
    <p><%= @song.album.title %></p>
  </div>

  <%= render partial: "add_section_button", locals: { section_number: 0} %>

  <%= render partial: "add_attributes" %>

  <%= render partial: "edit_lyrics" %>

  <%= render partial: "edit_rhythm" %>

  <%= render partial: "add_and_remove_cells" %>

  <%= render partial: "add_and_delete_measures" %>

  <div class="song-edit selectable">
    <%= render partial: 'edit_song', locals: { song: @song } %>
  </div>

  <% if super_user && !@song.published %>
    <%= render partial: "publish_button" %>
  <% elsif super_user && @song.published %>
    <%= render partial: "unpublish_button" %>
  <% end %>

</div>