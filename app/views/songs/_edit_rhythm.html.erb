<div class="edit-rhythm-container">
  <div class="row">
    <div class="small-12 columns">
      Duple:
      <button class="secondary button hollow change-rhythm" value="30">1/32</button>
      <button class="secondary button hollow change-rhythm" value="60">1/16</button>
      <button class="secondary button hollow change-rhythm" value="120">1/8</button>
      <button class="secondary button hollow change-rhythm" value="240">1/4</button>
      <button class="secondary button hollow change-rhythm" value="480">1/2</button>
      <button class="secondary button hollow change-rhythm" value="960">1 (Whole Note)</button>
    </div>
  </div>
  <div class="row">
    <div class="small-12 columns">
      Triple:
      <button class="secondary button hollow change-rhythm" value="40">1/24</button>
      <button class="secondary button hollow change-rhythm" value="80">1/12</button>
      <button class="secondary button hollow change-rhythm" value="160">1/6</button>
      <button class="secondary button hollow change-rhythm" value="320">1/3</button>
    </div>
  </div>
  <div class="row">
    <div class="small-12 columns add-and-remove-cells">
      <button class="secondary button hollow remove-cell">Remove Cell</button>
      <button class="secondary button hollow add-cell" value="before">Add Cell Before</button>
      <button class="secondary button hollow add-cell" value="after">Add Cell After</button>
    </div>
  </div>
  <div class="row">
    <div class="small-12 columns add-and-remove-cells">
      <button class="secondary button hollow add-measure-before" value="before">Add Measure Before Section</button>
      <button class="secondary button hollow add-measure-after" value="after">Add Measure After Section</button>
      <button class="secondary button hollow delete-measure">Remove Measure</button>
    </div>
  </div>
</div>