<div class="container">
  <h1><%= @artist.name %></h1>
  <h2>Region: <%= @artist.region %></h2>
  <h3>Albums</h3>
  <% @artist.albums.each do |album| %>
    <h4><%= album.title %> :: <%= album.year %></h4>
    <ul>
    <% album.songs.each do |song| %>
      <li><a href="/songs/<%= song.id %>"><%= song.name %></a></li>
    <% end %>
    </ul>
  <% end %>
  <h3>Statistics</h3>
  <p>% of syllables rhymed: <%= @artist.percent_of_rhyming_syllables %></p>
  <p>Average end rhyme syllable count: <%= @artist.average_end_rhyme_syllable_count %></p>
  <p>Percent of measures with beat one stressed: <%= @artist.percent_of_measures_with_stress_on_beat_one %></p>
  <p>Placement of stressed syllables: </p>
  <table>
    <tr>
      <th>Placement</th>
      <th>Count</th>
    </tr>
    <% @artist.placement_of_stressed_syllables.each do |beginning, count| %>
    <tr>
      <td><%= beginning %></td>
      <td><%= count %></td>
    </tr>
    <% end %>
  </table>
  <p>Placement of end rhymes: </p>

  <table>
    <tr>
      <th>Placement</th>
      <th>Count</th>
    </tr>
    <% @artist.placement_of_end_rhymes.each do |beginning, count| %>
    <tr>
      <td><%= beginning %></td>
      <td><%= count %></td>
    </tr>
    <% end %>
  </table>
</div>
