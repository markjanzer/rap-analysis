<div class="top-bar">
  <div class="top-bar-left">
    <ul class="menu">
      <li><a href="/">Rap Analysis WebApp</a></li>
    </ul>
  </div>
  <div class="top-bar-right">
    <ul class="menu">
    <% if current_user.nil? %>
      <li><%= link_to "Login", login_path %></li>
      <li><%= link_to "Create Account", new_user_path %></li>
    <% else %>
      <li><%= link_to "Logout", logout_path, method: :delete %></li>
    <% end %>
    </ul>
  </div>
</div>


<h1>Rap Analysis Web App</h1>
<div class="nav-bar">
  <% if current_user.nil? %>
    <%= link_to "Login", login_path %>
    <%= link_to "Create Account", new_user_path %>
  <% else %>
    <%= link_to "Logout", logout_path, method: :delete %>
  <% end %>
</div>

<div class="published-song-list"></div>
  <ul>
    <% Song.where(published: true).each do |song| %>
      <li><a href="/songs/<%= song.id %>"><%= song.name %> :: <%= song.comma_separated_artists %> :: <%= song.album.title %></a></li>
    <% end %>
  </ul>
</div>

<% if current_user %>
  <div class="personal-song-list"></div>
    <ul>
      <% Song.where(transcriber_id: current_user.id).each do |song| %>
        <li><a href="/songs/<%= song.id %>"><%= song.name %> :: <%= song.comma_separated_artists %> :: <%= song.album.title %></a>
          <%= link_to "Edit", edit_song_path(song) %>
        </li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= link_to "New Song", new_song_path %>
